<h2 class=page-header><%= book.title %></h2>
<img height="150px" width="100px" src="<%= book.coverImagePath %>">
<span>
    <h3>Author: <%= book.author.name %> </h3>
</span>
<span>
    <h3>Publish Date: <%= book.publishDate.toDateString() %></h3>
</span>
<span>
    <h3>Page Count: <%= book.pageCount %></h3>
</span>
<span>
    <h3>Description: <%= book.description %></h3>
</span>
<div class="form-row btn-row form-row-end">
    <a href="/books/<%= book.id %>/edit" class="btn btn-primary">Edit</a>
    <%- include('../partials/deleteForm',{ url: `/books/${book.id}` }) %>
    <a href="/authors/<%= book.author.id %>" class="btn btn-primary">View Author</a>
</div>