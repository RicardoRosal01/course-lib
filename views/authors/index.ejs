<h2 class=page-header>Search Authors</h2>
<form action="/authors" method="GET">
        <div class="form-item form-row">
            <label>Name:</label>
            <input type="type" name="name" value="<%= searchOptions.name %>">
        </div>
        <div class="form-row form-row-end">
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
</form>
<br>
<% authors.forEach(author => { %>
<div class="author-row">
    <div class="author-name"><%= author.name %></div>
        <div class="btn-row form-row-end">
            <a href="/authors/<%= author.id %>" class="btn btn-primary">View</a>
            <a href="/authors/<%= author.id %>/edit" class="btn btn-primary">Edit</a>
            <%- include('../partials/deleteForm.ejs',{ url: `/authors/${author.id}` }) %>
        </div>
</div>
<% }) %>